{
    "manifest_version": 2,
    "name": "YouTube Video Downloader",
    "version": "1.0",
    "description": "Download YouTube videos as MP4.",
    "permissions": [
        "activeTab",
        "downloads"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}
