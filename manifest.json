{
    "manifest_version": 2,
    "name": "YouTube Video Downloader",
    "description": "Download videos from YouTube as MP4.",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "downloads"
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  